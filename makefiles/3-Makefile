CC=gcc
SRC=main.c school.c
OBJ=$(SRC:.c=.o)
NAME=school
RM=rm

all: $(NAME)

school: $(OBJ)
	$(CC) $^ -o $@

%.o: %.c
	$(CC) -c -o $@ $<

clean:
	$(RM) -f *~ $(NAME)

oclean:
	$(RM) -f $(wildcard *.o)

fclean:
	$(RM) -f *~ $(NAME)
	$(RM) -f $(wildcard *.o)

re: $(OBJ)
	$(RM) -f $(wildcard *.o)
	$(CC) $^ -o $@
